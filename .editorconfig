root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.mod]
indent_style = tab

[{Makefile,**.mk}]
indent_style = tab

[*.go]
indent_style = tab

[*.proto]
indent_size = 2

[*.toml]
indent_size = 2

[*.tmpl]
indent_size = 4

[*.js]
indent_size = 2
block_comment_start = /*
block_comment_end = */

[*.css]
indent_size = 2

[*.{html,htm}]
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.diff]
indent_size = 1
